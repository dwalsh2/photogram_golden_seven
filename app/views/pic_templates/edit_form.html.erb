<!--Remember that Value pre-populates a value in a box-->

<h1>Edit photo <%= @the_photo.id %></h1>

<form action="/update_photo/<%= @the_photo.id %>">
    <div>
        <label for="Image URL">
            <b>Image URL</b>
        </label>
        
        <input id="Image URL" type="text" name="the_source" value="<%= @the_photo.source %>">
    </div>

    <div>
        <label for="Caption">
            <b>Caption</b>
        </label>
        
        <input id="Caption" type="text" name="the_caption" value="<%= @the_photo.caption %>">
    </div>

    <button>Update Photo</button>
</form>